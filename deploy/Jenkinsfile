pipeline {
    agent any

  parameters {
    string(name: 'inventory', defaultValue: 'dev',  description: 'This is the inventory file for the environment to deploy configuration')
  }

  environment {
    ANSIBLE_CONFIG="${WORKSPACE}/deploy/ansible.cfg"
  }

 

  stages {
  
  stage('Initial cleanup') {
    steps {
      dir("$WORKSPACE") {
        deleteDir()
      }
    }
  }

  
    stage('SCM Checkout') {
      steps {
         git branch: 'feature/prj14-jenkinsfilepipeline', url: 'https://github.com/adaanene/ansible-config-mgt.git'
      }
    }

    stage('Prepare Ansible For Execution') {
      steps {
        sh 'echo ${WORKSPACE}'
        sh 'sed -i "3 a roles_path=${WORKSPACE}/roles" ${WORKSPACE}/deploy/ansible.cfg'
      }
    }
    
      stage('Execute Ansible Playbook') {
      steps {
         ansiblePlaybook become: true, colorized: true, credentialsId: 'my_key_2', disableHostKeyChecking: true, installation: 'ansible', inventory: '${inventory}', playbook: 'playbooks/site.yml'
      }
    }

    stage('Cleanup') {
      steps {
        cleanWs(deleteDirs: true)
      }
    }
  }
}
   

   

   

 
 
